@using TechnologyStore.Models
@model List<Product>

@{
    ViewData["Title"] = "Laptop";
    Layout = "~/Views/Shared/_WebSiteLayout.cshtml";
}

@foreach (var item in Model)
{
    <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
        <div class="bg-dark me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
            <div class="my-3 py-3">
                <h2 class="display-5">@item.ProductName</h2>
                <p class="lead">@item.ProductDescription</p>
                <p class="lead">@item.ProductPrice</p>
            </div>
            <img class="" src="@item.ImageURL" alt="" width="250" height="250">
        </div>
    </div>
}